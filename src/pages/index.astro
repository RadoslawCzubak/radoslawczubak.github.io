---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import laptopImage from "../assets/laptop.png";
import Image from "astro/components/Image.astro";
import "../style/global.css";
---

<Layout title="RADOSLAV">
  <main>
    <!-- <Header /> -->
    <div class="hero">
      <div id="hero-text-container">
        <div id="hero-text">
          <p>Hi, I’m Radoslav <br /> Software Developer</p>
          <p>I’m ready to become your one man army in IT.</p>
        </div>
      </div>
      <div id="hero-image">
        <Image src={laptopImage} alt="laptop" />
      </div>
    </div>
  </main>
</Layout>

<style>
  .hero {
    max-height: 100vh;
    height: 100vh;
    max-width: 100vw;
    padding-left: 10%;
    padding-right: 10%;
    background-image: url("../assets/neon_bg_1.png");
    object-fit: inherit;
  }

  #hero-text-container {
    float: inline-start;
    width: 50%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  #hero-text {
    font-size: 52px;
    font-weight: bold;
    font-family: Montserrat, Helvetica, sans-serif;
    color: white;
  }

  #hero-text p:last-child {
    font-size: 32px;
    font-weight: normal;
  }

  #hero-image {
    float: left;
    width: 50%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  #hero-image img {
    height: auto;
    width: 80%;
  }
</style>
