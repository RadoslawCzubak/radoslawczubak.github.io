---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import laptopImage from "../assets/laptop.png";
import Image from "astro/components/Image.astro";
import WorkInProgressDialog from "../components/WorkInProgressDialog.astro";
import "../style/global.css";
---

<Layout title="RADOSLAV">
  <main>
    <!-- <Header /> -->
    <div id="work-in-progress-dialog">
      <WorkInProgressDialog />
    </div>
    <div class="hero">
      <div id="hero-text-container">
        <div id="hero-text" class="prevent-select">
          <p>
            Hi, I’m <span id="dev-name">Radoslav</span><br /> Software Developer
          </p>
          <p>I’m ready to become your one man army in IT.</p>
        </div>
      </div>
      <div id="hero-image">
        <Image src={laptopImage} alt="laptop" />
      </div>
    </div>
  </main>
</Layout>

<style>
  main {
    position: relative;
  }

  p {
    margin: 16px 0 16px 0;
  }

  #dev-name {
    background-image: linear-gradient(90deg, #fff 0%, #0094ff 100%);
    color: transparent;
    background-clip: text;
  }

  #work-in-progress-dialog {
    animation: 1s ease-out 0s 1 fadeIn;
    animation-delay: 1s;
    opacity: 0;
    animation-fill-mode: forwards;
    font-family: Montserrat;
    font-size: 20px;
    color: white;
    background:
      radial-gradient(
          circle at 100% 100%,
          #0b0b0b 0,
          #0b0b0b 10px,
          transparent 10px
        )
        0% 0%/12px 12px no-repeat,
      radial-gradient(
          circle at 0 100%,
          #0b0b0b 0,
          #0b0b0b 10px,
          transparent 10px
        )
        100% 0%/12px 12px no-repeat,
      radial-gradient(
          circle at 100% 0,
          #0b0b0b 0,
          #0b0b0b 10px,
          transparent 10px
        )
        0% 100%/12px 12px no-repeat,
      radial-gradient(circle at 0 0, #0b0b0b 0, #0b0b0b 10px, transparent 10px)
        100% 100%/12px 12px no-repeat,
      linear-gradient(#0b0b0b, #0b0b0b) 50% 50% / calc(100% - 4px)
        calc(100% - 24px) no-repeat,
      linear-gradient(#0b0b0b, #0b0b0b) 50% 50% / calc(100% - 24px)
        calc(100% - 4px) no-repeat,
      linear-gradient(90deg, #d60092 0%, #0094ff 100%);
    border-radius: 12px;
    padding-left: 22px;
    padding-right: 22px;
    padding-top: 10px;
    padding-bottom: 10px;
    box-sizing: content-box;
    text-align: center;
    margin-left: 10%;
    margin-right: 10%;
  }

  .hero {
    max-height: 100vh;
    height: 100vh;
    max-width: 100vw;
    padding-left: 10%;
    padding-right: 10%;
    background-image: url("../assets/neon_bg_1.png");
    background-position: center center;
    background-size: cover;
    background-repeat: no-repeat;
  }

  #hero-text-container {
    width: 100%;
    padding-top: 10%;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  #hero-text {
    font-size: 52px;
    font-weight: bold;
    font-family: Montserrat, Helvetica, sans-serif;
    color: white;
  }

  #hero-text p:last-child {
    font-size: 32px;
    font-weight: normal;
  }

  #hero-image {
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    padding-top: 36px;
  }

  #hero-image img {
    height: auto;
    width: 80%;
  }

  @media only screen and (min-width: 768px) {
    #work-in-progress-dialog {
      position: absolute;
      align-self: center;
      left: 50%;
      top: 5%;
      transform: translate(-50%, 0%);
      margin-left: auto;
      margin-right: auto;
    }

    #hero-text-container {
      padding-top: 0%;
      float: inline-start;
      height: 100%;
      width: 50%;
    }

    #hero-image {
      float: left;
      width: 50%;
      height: 100%;
      padding-top: 0px;
    }
  }
</style>
